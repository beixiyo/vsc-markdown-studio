{
  "name": "md-editor",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:markdown-studio": "pnpm --filter markdown-studio dev",
    "dev:vsc-markdown-studio": "pnpm --filter vsc-markdown-studio dev",
    "---build---": "",
    "build": "turbo build",
    "build:comp": "pnpm --filter comps build",
    "build:markdown-studio": "pnpm --filter markdown-studio build",
    "build:vsc-markdown-studio": "pnpm --filter vsc-markdown-studio build",
    "build:hooks": "pnpm --filter hooks build",
    "build:utils": "pnpm --filter utils build",
    "build:config": "pnpm --filter config build",
    "---lint---": "",
    "lint": "turbo lint",
    "lint:comp": "pnpm --filter comps lint",
    "lint:markdown-studio": "pnpm --filter markdown-studio lint",
    "lint:vsc-markdown-studio": "pnpm --filter vsc-markdown-studio lint",
    "lint:hooks": "pnpm --filter hooks lint",
    "lint:utils": "pnpm --filter utils lint",
    "lint:config": "pnpm --filter config lint",
    "vsix": "pnpm --filter vsc-markdown-studio vsix",
    "turbo:clean": "turbo prune"
  },
  "dependencies": {
    "@jl-org/tool": "^3.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.14",
    "lucide-react": "^0.525.0",
    "mermaid": "^11.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@babel/eslint-parser": "^7.26.10",
    "@eslint-react/eslint-plugin": "^1.26.2",
    "@jl-org/eslint-plugins": "^1.0.0",
    "@jl-org/js-to-style": "^1.0.0",
    "@jl-org/ts-tool": "^0.0.8",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "code-inspector-plugin": "^1.2.9",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "npm-run-all2": "8.0.4",
    "postcss": "^8.5.6",
    "sass": "^1.92.1",
    "tailwindcss": "3.4.17",
    "turbo": "^2.5.6",
    "typescript": "~5.8.0",
    "unplugin-auto-import": "^20.1.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4"
  }
}