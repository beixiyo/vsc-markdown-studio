{
  "name": "tiptap-trigger",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./index.css": "./dist/index.css",
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./react": {
      "require": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.cjs"
      },
      "import": {
        "types": "./dist/react/index.d.ts",
        "default": "./dist/react/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "tiptap-utils": "workspace:*",
    "tiptap-api": "workspace:*",
    "utils": "workspace:*",
    "hooks": "workspace:*",
    "styles": "workspace:*"
  },
  "peerDependencies": {
    "i18n": "workspace:*",
    "@tiptap/core": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint ./src --fix --quiet"
  }
}
