{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client"
    ],

    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "composite": false,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],

      "tiptap-ai": ["./packages/tiptap-ai/src/index.ts"],
      "tiptap-ai/react": ["./packages/tiptap-ai/src/react/index.ts"],

      "tiptap-comment": ["./packages/tiptap-comment/src/index.ts"],
      "tiptap-comment/react": ["./packages/tiptap-comment/src/react/index.ts"],

      "tiptap-mermaid": ["./packages/tiptap-mermaid/src/index.ts"],
      "tiptap-mermaid/react": ["./packages/tiptap-mermaid/src/react/index.ts"],

      "tiptap-api": ["./packages/tiptap-api/src/index.ts"],
      "tiptap-api/react": ["./packages/tiptap-api/src/react/index.ts"],
      "tiptap-react-hook": ["./packages/tiptap-react-hook/src/index.ts"],
      "tiptap-trigger": ["./packages/tiptap-trigger/src/index.ts"],
      "tiptap-trigger/react": ["./packages/tiptap-trigger/src/react/index.ts"],

      "tiptap-comps": ["./packages/tiptap-comps/src/index.ts"],
      "tiptap-comps/icons": ["./packages/tiptap-comps/src/icons/index.ts"],

      "tiptap-nodes": ["./packages/tiptap-nodes/src/index.ts"],
      "tiptap-nodes/speaker": ["./packages/tiptap-nodes/src/speaker/index.ts"],
      "tiptap-nodes/image-upload": ["./packages/tiptap-nodes/src/image-upload/index.tsx"],
      "tiptap-nodes/horizontal-rule": ["./packages/tiptap-nodes/src/horizontal-rule/index.ts"],

      "tiptap-editor-core": ["./packages/tiptap-editor-core/src/index.ts"],
      "tiptap-utils": ["./packages/tiptap-utils/src/index.ts"],
      "comps": ["../packages/comps/src"],
      "hooks": ["../packages/hooks/src"],
      "utils": ["../packages/utils/src"],
      "styles": ["../packages/styles/src"],
      "i18n": ["../packages/i18n/src/index.ts"],
      "i18n/react": ["../packages/i18n/react/index.ts"]
    }
  },
  "include": [
    "src"
  ]
}