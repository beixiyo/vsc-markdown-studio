{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client"
    ],

    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "composite": false,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "tiptap-styles": ["./packages/tiptap-styles/src/index.ts"],
      "tiptap-styles/icons": ["./packages/tiptap-styles/src/icons/index.ts"],
      "tiptap-styles/tiptap-node": ["./packages/tiptap-styles/src/tiptap-node/index.ts"],
      "tiptap-styles/utils": ["./packages/tiptap-styles/src/utils/index.ts"],

      "tiptap-ai": ["./packages/tiptap-ai/src/index.ts"],
      "tiptap-ai/react": ["./packages/tiptap-ai/src/react/index.ts"],

      "tiptap-comment": ["./packages/tiptap-comment/src/index.ts"],
      "tiptap-comment/react": ["./packages/tiptap-comment/src/react/index.ts"],

      "tiptap-mermaid": ["./packages/tiptap-mermaid/src/index.ts"],
      "tiptap-mermaid/react": ["./packages/tiptap-mermaid/src/react/index.ts"],

      "tiptap-api": ["./packages/tiptap-api/src/index.ts"],
      "tiptap-api/react": ["./packages/tiptap-api/src/react/index.ts"],
      "tiptap-trigger": ["./packages/tiptap-trigger/src/index.ts"],
      "tiptap-trigger/react": ["./packages/tiptap-trigger/src/react/index.ts"],

      "tiptap-speaker-node": ["./packages/tiptap-speaker-node/src/index.ts"],

      "tiptap-editor-core": ["./packages/tiptap-editor-core/src/index.ts"]
    }
  },
  "include": [
    "src"
  ]
}