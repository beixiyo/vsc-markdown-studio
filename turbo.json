{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "src/styles/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  },
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",

    "tsconfig.json",
    "tsconfig.base.json",
    "tsconfig.app.json",
    "tsconfig.node.json",

    "tailwind.config.js",
    "postcss.config.js"
  ]
}
