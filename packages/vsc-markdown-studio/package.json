{
  "name": "vsc-markdown-studio",
  "displayName": "Markdown Studio",
  "version": "0.0.1",
  "description": "A powerful WYSIWYG Markdown editor with Mermaid diagrams, and advanced features",
  "publisher": "CJL",
  "author": "CJL <2662442385@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/beixiyo/vsc-markdown-studio",
  "repository": {
    "type": "git",
    "url": "https://github.com/beixiyo/vsc-markdown-studio"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "mermaid",
    "diagram",
    "visualization",
    "preview"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.webp",
  "files": [
    "../../LICENSE.md",
    "dist/*",
    "res/*",
    "webview/*",
    "CHANGELOG.md"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onCustomEditor:markdown-studio.editor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdown-studio.editor",
        "displayName": "Markdown Studio Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": []
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --sourcemap",
    "lint": "eslint src --fix",
    "vscode:prepublish": "pnpm build",
    "publish": "vsce publish --no-dependencies",
    "vsix": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "pnpm publish"
  },
  "dependencies": {
    "config": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.6.0",
    "reactive-vscode": "^0.2.22",
    "tsup": "^8.5.0"
  }
}
